  <%= render '/shared/navbar' %>

<div id="page-top">
    <div class="jumbotron">
      <div class="container">
        <h1>UrbanChef</h1>
        <h4>Find or become a personal Chef</h4>
          <div>
            <% if current_client %>
              <%= link_to 'View local Chefs', chefs_path, class: 'button' %>
            <% elsif current_chef %>
              <%= link_to 'Your Chef Dashboard', clients_path, class: 'button' %>
            <% else %>
              <%= link_to 'Client Log In', new_client_session_path, class: 'button_login' %>
              <%= link_to 'Chef Log In', new_chef_session_path, class: 'button_login' %>
            <% end %>
          </div>
          </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="index_button">
            <%= link_to 'Sign Up', new_client_registration_path, class: 'button' %>
          <p class="index_p">Join in on our large community of connoisseurs enjoying quality meals at home for fair prices.</p>
        </div>
        </div>
        <div class="col-md-4">
          <div class="index_button">
          <%= link_to 'Become a Chef', new_chef_registration_path, class: 'button' %>
          <p class="index_p">become a Chef and start your new freelancing career, work from home, set your own hours and take controll over your cooking.</p>
        </div>
      </div>
        <div class="col-md-4">
          <a class=" btn-default page-scroll" href="#about"> <input class="button" type="submit" value="Learn More"></li> </a>
          <p class=index_p2>Learn more about our services and how things work on the site, take a tour through the services offered to both chef's and connoisseurs</p>
        </div>
      </div>
    </div>


        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>

          <div class="carousel-inner" role="listbox">
            <div class="item">
                <p>One</p>
            </div>
            <div class="item active">
                <p>Urban Chef is designed to connect busy professionals with a restaurant quality dining experience</p>
            </div>
            <div class="item">
                <p>Two</p>
            </div>
          </div>

          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"></a>
          <span class="carousel_button" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>

          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"></a>
          <sp class="carousel_button" aria-hidden="true"></sp>
          <span class="sr-only">Next</span>

        </div>

        <script>
        $('.carousel').carousel({
          wrap: false
          });
              $('#myCarousel').carousel(3);
        </script>


</div>




