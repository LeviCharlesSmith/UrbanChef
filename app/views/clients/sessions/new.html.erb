<%= render '/shared/navbar' %>

<h1 class="title_login">Client Login</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "client_login_form"}) do |f| %>

    <div class="email_login">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="client_login_password">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions submit_login">
      <%= f.submit "Log in"%>
    </div>
  <% end %>

<%= render "clients/shared/links" %>
