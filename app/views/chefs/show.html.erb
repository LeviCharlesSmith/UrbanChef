<h1>Chef show</h1>


<div><%= @chef.name %></div>
<div><%= @chef.email %></div>
<div><%= @chef.location %></div>
<div><%= @chef.experience %></div>
<div><%= image_tag @chef.chef_avatar.url(:large) if @chef.chef_avatar %></div>



<h3>Dishes:</h3>

<% @chef.products.each do |product| %>
  <div class="product">
    <p>
      <%= product.name %>
      <%= product.description %>

      <%= image_tag product.product_picture.url(:medium) if product.product_picture %>
    </p>
  </div>
<% end %>


<% if @nearby_chefs.any? %>
  <h2>Nearby Chefs</h2>
    <ul>
      <% @nearby_chefs.each do |nc| %>
        <li><%= "#{nc.name}, #{nc.distance} km" %></li>
      <% end %>
    </ul>
  <% end %>
