<!DOCTYPE html>
<html>
  <head>
    <title>UrbanChef</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "UrbanChef", root_path, class: 'navbar-brand' %>

        <ul class="nav navbar-nav">
          <% if current_client %>
            <li><button type="button" class="button"><%= link_to 'client logout', destroy_client_session_path, method: :delete %></button></li>
            <li><button type="button" class="button"><%= link_to 'index chef', chefs_path %></button></li>
          <% elsif current_chef %>
            <li><button type="button" class="button"><%= link_to 'chef logout', destroy_chef_session_path, method: :delete %></button></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>



    <%= yield %>


    <p><%= link_to 'Home', root_path %></p>
    <p><%= link_to 'index client', clients_path %></p>
    <p><%= link_to 'index chef', chefs_path %></p>



    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if current_client %>
      <p>Signed in as Client: <%= current_client.email %> </p>
      <p><%= link_to 'Client Log Out', destroy_client_session_path, method: :delete %></p>
    <% elsif current_chef %>
      <p>Signed in as Chef: <%= current_chef.email %></p>
      <p><%= link_to 'Chef Log Out', destroy_chef_session_path, method: :delete %></p>
    <% end %>

  </body>
</html>
