<h2>Log in</h2>

<div class="client_login_form">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="client_login_question">
      <%= f.label :email, class: 'client_login_label' %><br />
      <%= f.email_field :email, autofocus: true, class: 'client_login_input' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'client_login_label' %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'client_login_input' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'client_login_button' %>
    </div>
  <% end %>

</div>

<%= render "devise/shared/links" %>
